<% unless current_user == user %>
  <% if current_user.requesting?(user) %>
    <%= form_for(current_user.machings.find_by(request_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :request_id, user.id %>
      <%= f.submit 'Unrequest', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.machings.build) do |f| %>
      <%= hidden_field_tag :request_id, user.id %>
      <%= f.submit 'request', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>