<% @messages.each do |message| %>
  <% if message.message_user == current_user %>
    <%= message.message_user.name%>
    <%= message.message_content %>
  <% else %>
    <%= message.message_user.name%>
    <%= message.message_content %>
  <%end%>
<%end%>

<%= form_with model: @message do |f| %>
  <%= f.hidden_field :message_user_id, value: current_user.id %>
  <%= f.hidden_field :message_maching_id, value: @maching.id %>
  <%= f.text_field :message_content %>
  <%= f.submit %>
<% end %>